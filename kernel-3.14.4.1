echo "$(tput setaf 3)--- Este script foi criado pelo SempreUpdate e vai instalar o Kernel 3.14.4 vai ser instalado em `uname -i` system---$(tput sgr0)"

echo ""

sleep 2

read -p "Pressione Enter para continuar, ou CTRL+C para cancelar" nothing

echo ""
